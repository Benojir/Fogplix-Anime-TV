<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="0dp"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="5dp"
    android:layout_marginHorizontal="15dp"
    app:cardBackgroundColor="?attr/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/anime_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anime title demo Anime title demo Anime title demo "
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:padding="15dp"
            android:textColor="?attr/text_color"
            tools:ignore="HardcodedText" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_to_favorite_action_cv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/green"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="3dp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:strokeWidth="0dp"
            app:strokeColor="@color/orange"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/heart_plus"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Add To Favorite"
                    android:textAllCaps="false"
                    android:textColor="?attr/text_color"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/watch_now_action_cv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/fade_blue"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="3dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:strokeWidth="0dp"
            app:strokeColor="@color/orange"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/play_circle"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watch Now"
                    android:textColor="?attr/text_color"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>